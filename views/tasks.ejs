<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Home Page</title>

    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
    <link rel="stylesheet" href="/vendor/border-box.css" />
    <link rel="stylesheet" href="/styles/main.css" />
    <link rel="stylesheet" href="/styles/layout.css" />
    <link rel="stylesheet" href="/styles/homepage.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Young+Serif&display=swap"
      rel="stylesheet"
    />
    <script src="/vendor/jquery-3.0.0.js"></script>
    <script defer src="/scripts/app.js"></script>
  </head>

  <body>
    <nav class="nav">
      <div class="nav-bar-buttons">

        <button>
          <a href="/tasks?category_id=3" class="nav-button">TO READ</a>
        </button>
        <button>
          <a href="/tasks?category_id=1" class="nav-button">TO WATCH</a>
        </button>
        <button>
          <a href="/tasks?category_id=2" class="nav-button">TO EAT</a>
        </button>
        <button>
          <a href="/tasks?category_id=4" class="nav-button">TO BUY</a>
        </button>
        <button>
          <a href="/tasks?category_id=5" class="nav-button">OTHER</a>
        </button>
      </div>


      <form action="/logout" class="logout-btn" method="POST">
        <button type="submit">LOGOUT</button>
      </form>
    </nav>



    <!-- Temporary / Placeholder form to submit a new task -->

    <section class="nav-form">

      <form action="/submit" method="POST">
        <textarea class="textarea" placeholder="ENTER NEW TASK"></textarea>
        <button type="submit">ADD TO LIST</button>
      </form>
<main>
    <section class="profile-edit">
      <button>
        <a href="/profile" class="nav-button-profile">PROFILE</a>
      </button>
    </section>
</main>




    </section>


    <!-- Render the list of tasks -->
    <section class="tasks">
      <% for (const task of tasks) { %>
      <h3><%= task.title %></h3>
      <%}%>
    </section>
  </body>
</html>
