<html lang="en">
  <head>
    <title>main</title>
    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
    <link rel="stylesheet" href="/vendor/border-box.css" />
    <link rel="stylesheet" href="/styles/main.css" />
    <link rel="stylesheet" href="/styles/layout.css" />
    <link rel="stylesheet" href="/styles/homepage.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Young+Serif&display=swap"
      rel="stylesheet"
    />
    <script src="/vendor/jquery-3.0.0.js"></script>
    <script defer src="/scripts/app.js"></script>
  </head>

  <body>
    <nav class="nav">
      <div>
        <button><a href="/profile" class="nav-button">PROFILE</a></button>

        <button>
          <a href="/tasks?category_id=3" class="nav-button">TO READ</a>
        </button>
        <button>
          <a href="/tasks?category_id=1" class="nav-button">TO WATCH</a>
        </button>
        <button>
          <a href="/tasks?category_id=3" class="nav-button">TO EAT</a>
