<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />

    <script type="text/javascript" src="/scripts/app.js"></script>


    <!-- App CSS -->
    <link rel="stylesheet" href="/styles/layout.css" type="text/css" />

    <!-- Bootstrap CSS -->
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css"
      integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS"
      crossorigin="anonymous"
    />
    <title>Smart TODO List</title>
  </head>
  <body>
      <nav class="navbar" id="scrollingNav">
        <div class="name-icons">
          <p class="logo">Categorizer</p>
        </div>
        <div class="user-settings">
            <i class="fas fa-user-cog user-icon"></i>
            <p class="user-icon-label">User Settings</p>
        </div>
      </nav>


      <h3>Category</h3>
      <section class="categories-container"></section>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">Title</th>
            <th scope="col">Date Created</th>
          </tr>
        </thead>
        <tbody>
          <% for (let id in tasks) { %>
            <tr>
              <td><%= id %></td>
              <td><%= tasks[id].date_created %></td>
              <td>
                <form method="POST" action="/tasks/<%=id%>/delete"><button class="btn btn-primary">Delete</button></form>
              </td>
              <td>
                <form method="GET" action="/TASKS/<%=id%>">
                  <button type="submit" class="btn btn-info">Edit</button></form>
              </td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </section>


    </main>
    <!-- Bootstrap JS -->
    <script
      src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
      integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"
      integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
      integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
