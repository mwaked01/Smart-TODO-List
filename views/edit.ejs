<!DOCTYPE html>
<html lang="en">

<head>
  <title>Edit Task</title>

  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
  <link rel="stylesheet" href="/vendor/border-box.css" />
  <link rel="stylesheet" href="/styles/main.css" />
  <link rel="stylesheet" href="/styles/layout.css" />
  <link rel="stylesheet" href="/styles/header.css" />
  <link rel="stylesheet" href="../styles/editProfile.css" type="text/css" />

  <script src="/vendor/jquery-3.0.0.js"></script>
  <script type="text/javascript" src="/scripts/edit.js"></script>
<script type="text/javascript" src="/scripts/categories.js"></script>

</head>

<body>
  <div class="update-profile-container">
    <%- include('./partials/_header') %>
    <div class="page-top">
        <h1 class="custom-header">Update Task</h1>
    </div>
    <div class="user-profile-container rounded bg-white mt-5">
      <div class="row">
        <div class="user-profile-sidebar col-md-4 border-right">
          <form id="update-form">
          <div class="user-profile-sidebar">
            <div class="user-input-field user-username">
              <label id="current-name" class="profile-name">
                Task: <%= task %>
              </label>
            </div>
            <div class="user-input-field user-email">
              <label id="current-email" class="profile-email">
                Category --
              </label>
              <form method="POST" name = "chg-cat"  action="/edit/:<%= task %>">>
                <fieldset>
                  <legend>Please change category to:</legend>
                  <div>
                    <input type="radio" id="Choice1" name="category" value="1" />
                    <label for="contactChoice1">Films</label>

                    <input type="radio" id="Choice2" name="category" value="2" />
                    <label for="contactChoice2">Restaurants</label>

                    <input type="radio" id="Choice3" name="category" value="3" />
                    <label for="contactChoice3">Books</label>

                    <input type="radio" id="Choice" name="category" value="4" />
                    <label for="contactChoice3">Products</label>
                  </div>
                  <div>
                    <button type="submit">Submit</button>
                  </div>
                </fieldset>
              </form>

